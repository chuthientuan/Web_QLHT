@model BTL.Models.HoaDonBan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Thông Tin Đơn Hàng Bán</h1>

<div>
    <h4>Hóa Đơn Bán</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã tài khoản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaTk)
        </dd>
        <dt class="col-sm-2">
            Tên khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaTkNavigation.HoTen)
        </dd>
        <dt class = "col-sm-2">
            Ngày bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayBan)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.MaHdb">Sửa</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.MaHdb">Xóa</a>
</div>
