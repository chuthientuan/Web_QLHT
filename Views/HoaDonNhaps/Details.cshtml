@model BTL.Models.HoaDonNhap

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Thông Tin Đơn Hàng Nhập</h1>

<div>
    <h4>Hóa Đơn Nhập</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên nhà cung cấp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaNccNavigation.TenNcc)
        </dd>
        <dt class = "col-sm-2">
            Ngày nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.MaHdn">Sửa</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.MaHdn">Xóa</a>
    <a class="btn btn-warning" asp-controller="ChiTietHdns" asp-action="Index" asp-route-maHdb="@Model.MaHdn">Chi Tiết</a>
</div>
