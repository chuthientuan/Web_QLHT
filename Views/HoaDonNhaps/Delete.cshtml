@model BTL.Models.HoaDonNhap

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Xóa Đơn Hàng Nhập</h1>

<h3>Bạn có muốn xóa đơn hàng này?</h3>
<div>
    <h4>Hóa Đơn Nhập</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên nhà cung cấp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaNccNavigation.TenNcc)
        </dd>
        <dt class = "col-sm-2">
            Ngày nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaHdn" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    </form>
</div>
