@model BTL.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Thông Tin Thuốc</h1>

<div>
    <h4>Sản Phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Loại thuốc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaLtNavigation.TenLt)
        </dd>
        <dt class = "col-sm-2">
            Tên thuốc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSp)
        </dd>
        <dt class = "col-sm-2">
