@model BTL.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Thông Tin Thuốc</h1>
<h4 style="margin-left: 0.5rem">Sản Phẩm</h4>
<hr />
<div class="ms-2 mx-2">
    <dl class="row">
        <dt class="col-sm-2">
            Loại thuốc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaLtNavigation.TenLt)
        </dd>
        <dt class = "col-sm-2">
            Tên thuốc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSp)
        </dd>
        <dt class = "col-sm-2">
            Đơn giá nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DonGiaNhap)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
            Đơn giá bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DonGiaBan)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class = "col-sm-2">
            Ảnh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Anh)
        </dd>
        <dt class = "col-sm-2">
            Hạn sử dụng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hsd)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.MaSp">Sửa</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.MaSp">Xóa</a>
</div>
