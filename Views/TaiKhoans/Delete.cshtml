@model BTL.Models.TaiKhoan

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Xóa Thông Tin Tài Khoản</h1>

<h3>Bạn có muốn xóa tài khoản này?</h3>
<div>
    <h4>Tài Khoản</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            Chức danh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-2">
            Tên Đăng nhập
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenDangNhap)
        </dd>
        <dt class="col-sm-2">
            Mật khẩu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaTk" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    </form>
</div>
