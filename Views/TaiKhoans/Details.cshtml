@model BTL.Models.TaiKhoan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Thông Tin</h1>
<h4 style="margin-left: 0.5rem">Tài Khoản</h4>
<hr />
<div class="ms-2 mx-2">
    <dl class="row">
        <dt class = "col-sm-2">
            Họ tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class = "col-sm-2">
            Chức danh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class = "col-sm-2">
            Tên Đăng nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenDangNhap)
        </dd>
        <dt class = "col-sm-2">
            Mật khẩu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Số điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.MaTk">Sửa</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.MaTk">Xóa</a>
</div>
