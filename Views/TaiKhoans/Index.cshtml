@model IEnumerable<BTL.Models.TaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1>Danh Sách Tài Khoản</h1>
<a asp-action="Create" class="btn btn-primary">Tạo mới</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ Tên
            </th>
            <th>
                Chức Danh
            </th>
            <th>
                Tên Đăng Nhập
            </th>
            <th>
                Mật Khẩu
            </th>
            <th>
                Email
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @if (item.Role == 0)
                {
                    <span>Khách hàng</span>
                }
                else if (item.Role == 1)
                {
                    <span>Admin</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDangNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.MaTk">Xem</a>
            </td>
        </tr>
}
    </tbody>
</table>
