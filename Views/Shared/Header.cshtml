<header class="bg-primary fixed-top">
    <div class="container d-flex align-items-center justify-content-between py-2">
        <a asp-action="Index" asp-controller="HomeKH">
            <img src="~/images/logo.svg" alt="Logo" class="header-img" style="width: 10rem; cursor: pointer;">
        </a>
        <ul class="nav me-auto">
            <li class="nav-item">
                <a asp-controller="HomeKH" asp-action="Index" class="nav-link text-white">Trang chủ</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown">Danh mục</a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="SanPhamKH" class="dropdown-item">Dược phẩm</a></li>
                    <li><a asp-controller="SanPhamKH" class="dropdown-item">Chăm sóc sức khỏe</a></li>
                    <li><a asp-controller="SanPhamKH" class="dropdown-item">Thực phẩm chức năng</a></li>
                </ul>
            </li>
            <li class="nav-item">
                <a asp-action="Index" asp-controller="DonKH" class="nav-link text-white">Đơn hàng</a>
            </li>
        </ul>

        <!-- Buttons for larger screens -->
        <div class="d-none d-md-flex align-items-center justify-content-between py-2">
            <a class="btn btn-light me-2" asp-controller="Cart" asp-action="Index">
                <i class="bi bi-cart3"></i>
            </a>
            <a class="btn btn-light me-2" asp-controller="User" asp-action="Index">
                <i class="bi bi-person"></i>
            </a>
            <a class="btn btn-light" asp-controller="Home">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        </div>

        <!-- Dropdown menu for smaller screens -->
        <div class="dropdown d-md-none">
            <button class="btn btn-light dropdown-toggle" type="button" id="menuDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-three-dots-vertical"></i> <!-- Three dots icon -->
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="menuDropdown">
                <li>
                    <a class="dropdown-item" asp-controller="Cart" asp-action="Index">
                        <i class="bi bi-cart3 me-2"></i>Giỏ hàng
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="User" asp-action="Register">
                        <i class="bi bi-person me-2"></i>Đăng ký
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-right me-2"></i>Đăng nhập
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>
