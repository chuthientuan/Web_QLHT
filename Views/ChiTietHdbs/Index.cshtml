@model IEnumerable<BTL.Models.ChiTietHdb>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
    decimal totalAmount = 0; // Variable to hold the total amount
}

<h1>Chi Tiết Hóa Đơn Bán</h1>

<p>
    <a asp-action="Create" asp-route-maHdb="@ViewBag.MaHdb" class="btn btn-primary">Thêm Sản Phẩm</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            decimal itemTotal = (item.MaSpNavigation.DonGiaBan * (item.Slban ?? 0)); // Calculate total for this item
            totalAmount += itemTotal; // Accumulate total amount

                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.MaSpNavigation.TenSp)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Slban)
                    </td>
                    <td>
                    @itemTotal.ToString("C0")
                    </td>
                    <td>
                    @Html.ActionLink("Edit", "Edit", new { maHdb = item.MaHdb, maSp = item.MaSp })
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaHdb})
                    </td>
                </tr>
        }

        <tr>
            <td><strong>Thành tiền</strong></td>
            <td></td>
            <td>
                <strong>@totalAmount.ToString("C0")</strong> <!-- Display total amount -->
            </td>
            <td></td>
        </tr>
    </tbody>
</table>
